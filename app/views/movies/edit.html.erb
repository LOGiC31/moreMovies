<% content_for :title, "Editing Movie" %>

<h1 style="font-size: 24px; font-weight: bold; font-family: 'Arial', sans-serif; color: #333;">Editing Movie</h1>

<!-- Movie Form Section -->
<div style="background-color: #f9f9f9; border: 1px solid #ddd; border-radius: 8px; padding: 20px; max-width: 600px; margin-bottom: 20px;">
  <%= render "form", movie: @movie %>
</div>

<!-- Action Links -->
<div style="margin-top: 10px;">
  <%= link_to "Show this movie", movie_path(@movie, sort: params[:sort], direction: params[:direction]), style: "padding: 8px 12px; background-color: #4CAF50; color: white; text-decoration: none; border-radius: 4px;" %> |
  <%= link_to "Back to movies", movies_path(sort: params[:sort], direction: params[:direction]), style: "padding: 8px 12px; background-color: #007BFF; color: white; text-decoration: none; border-radius: 4px;" %>
</div>
